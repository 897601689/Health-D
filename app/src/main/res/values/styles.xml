<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 信息列表垂直线 -->
    <style name="vertical_layout">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/bg_topbar_shadow</item>
    </style>

    <!-- 信息列表复选框 -->
    <style name="list_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 信息列表项 1-->
    <style name="list_tv1">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:textColor">#636363</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">0dip</item>
    </style>
    <!--信息列表项 2-->
    <style name="list_tv2">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#636363</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">0dip</item>
    </style>

    <!--按钮样式 big-->
    <style name="button_big">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_big</item>
    </style>
    <!--按钮样式 small-->
    <style name="button_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_small</item>
    </style>
    <!--检测数据 字体样式-->
    <style name="test_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">23sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--血压界面 条布局样式-->
    <style name="bp_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--血压界面 TextView样式-->
    <style name="bp_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">23sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--体温界面 TextView样式-->
    <style name="temp_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">23sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    <!--血氧界面 TextView样式-->
    <style name="spo2_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">23sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <!--尿常规界面 TextView样式-->
    <style name="um_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#424242</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">23sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--尿常规界面 条布局样式-->
    <style name="um_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="add_info_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="add_info_edit">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/temp_result</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginLeft">10dip</item>
    </style>
    <style name="add_info_btn">
        <item name="android:layout_width">200dip</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/temp_result</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="horizontal_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="dialog_item">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#636363</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="main_txt_limit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="main_txt_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ems">2</item>
    </style>

</resources>
