<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cancel_layout"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#ffffff">

    <TextView
        android:id="@+id/dialog_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="性别选择"
        android:textColor="#8f48a0"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/dialog_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_txt"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/dialog_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_list"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/add_cancel_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_big"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </LinearLayout>

</RelativeLayout>
